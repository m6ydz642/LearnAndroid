<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택을 시작하시겠습니까?" />

    <CheckBox
        android:id="@+id/chkAgree"
        android:layout_width="75dp"
        android:layout_height="34dp"
        android:text="시작함"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="142dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:text="좋아하는 애완 동물은?"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/chkAgree"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/rdoGroup1"
        android:layout_width="91dp"
        android:layout_height="68dp"
        android:layout_marginTop="7dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/Text2"
        tools:layout_editor_absoluteX="0dp">

        <RadioButton
            android:id="@+id/rdbDog"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="강아지" />

        <RadioButton
            android:id="@+id/rdbCat"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="고양이" />

        <RadioButton
            android:id="@+id/rdbRabbit"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="토끼" />
    </RadioGroup>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="93dp"
        android:layout_height="37dp"
        android:text="선택완료"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/rdoGroup1"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgPet"
        android:layout_width="270dp"
        android:layout_height="204dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btnOk"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>