<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>
        <EditText
            android:id="@+id/et_tl_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자1 입력"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/et_tl_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="숫자2 입력" />
    </TableRow>

    <TableRow>
        <Button android:id="@+id/btnNum0" android:text="0" ></Button>
        <Button android:id="@+id/btnNum1" android:text="1"></Button>
        <Button android:id="@+id/btnNum2" android:text="2"></Button>
        <Button android:id="@+id/btnNum3" android:text="3"></Button>
        <Button android:id="@+id/btnNum4" android:text="4"></Button>
    </TableRow>

    <TableRow>
        <Button android:id="@+id/btnNum5" android:text="5"></Button>
        <Button android:id="@+id/btnNum6" android:text="6"></Button>
        <Button android:id="@+id/btnNum7" android:text="7"></Button>
        <Button android:id="@+id/btnNum8" android:text="8"></Button>
        <Button android:id="@+id/btnNum9" android:text="9"></Button>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnAddCalc"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="더하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnMinusCalc"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="빼기"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnMultipleCalc"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="곱하기"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnSplitCalc"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="나누기"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnRestCalc"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="나머지"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/txtResult"
            android:layout_margin="5dp"
            android:text="@string/TextResult"
            android:textColor="#FF0000"
            android:layout_span="5"
            android:textSize="30dp" />
    </TableRow>
</TableLayout>