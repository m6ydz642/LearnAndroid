<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="9"
    android:columnCount="5">

    <!--연습문제 보고 따라함
    https://jow1025.tistory.com/212
    -->

        <EditText
            android:layout_columnSpan="5"
            android:id="@+id/et_tl_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint="숫자1 입력" />

        <EditText
            android:layout_columnSpan="5"
            android:id="@+id/et_tl_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint="숫자2 입력" />

        <Button android:id="@+id/btnNum0"
                android:text="0"
                android:layout_row="2"
                android:layout_column="0"
            ></Button>
        <Button android:id="@+id/btnNum1" android:text="1"
            android:layout_row="2"
            android:layout_column="1"
            ></Button>
        <Button android:id="@+id/btnNum2" android:text="2"
            android:layout_row="2"
            android:layout_column="2"
            ></Button>
        <Button android:id="@+id/btnNum3" android:text="3"
            android:layout_row="2"
            android:layout_column="3"></Button>

        <Button android:id="@+id/btnNum4"
                android:text="4"
                android:layout_row="2"
                android:layout_column="4">
        </Button>

        <Button android:id="@+id/btnNum5"
                android:text="5"
                android:layout_row="3"
                android:layout_column="0"></Button>

        <Button android:id="@+id/btnNum6" android:text="6"></Button>
        <Button android:id="@+id/btnNum7" android:text="7"></Button>
        <Button android:id="@+id/btnNum8" android:text="8"></Button>
        <Button android:id="@+id/btnNum9" android:text="9"></Button>

        <Button
            android:id="@+id/btnAddCalc"
            android:layout_margin="5dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:text="더하기"/>
        <Button
            android:id="@+id/btnMinusCalc"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:layout_row="6"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:text="빼기"
            />

        <Button
            android:id="@+id/btnMultipleCalc"
            android:layout_margin="5dp"
            android:text="곱하기"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            />

        <Button
            android:id="@+id/btnSplitCalc"
            android:layout_margin="5dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:text="나누기"
            />

        <Button
            android:id="@+id/btnRestCalc"
            android:layout_margin="5dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="5"
            android:text="나머지"
            />

        <TextView
            android:id="@+id/txtResult"
            android:layout_margin="5dp"
            android:text="@string/TextResult"
            android:textColor="#FF0000"
            android:layout_span="5"
            android:textSize="30dp" />
</GridLayout>