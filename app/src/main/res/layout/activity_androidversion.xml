<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택을 시작하시겠습니까?" />

    <Switch
        android:id="@+id/schAgree"
        android:layout_width="94dp"
        android:layout_height="31dp"
        android:text="시작함"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="180dp"
        android:layout_height="21dp"
        android:layout_marginTop="7dp"
        android:text="좋아하는 안드로이드 버전은?"
        app:layout_constraintTop_toBottomOf="@+id/schAgree"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/rdoAndroidGroup"
        android:layout_width="91dp"
        android:layout_height="68dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/Text2"
        tools:layout_editor_absoluteX="0dp"
        android:visibility="invisible">

        <RadioButton
            android:id="@+id/rdbVersion_O"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="O(10.0)" />

        <RadioButton
            android:id="@+id/rdbVersion_R"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="R(11.0)" />

        <RadioButton
            android:id="@+id/rdbVersion_S"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="S(12.0)" />
    </RadioGroup>

    <Button
        android:id="@+id/btnExit"
        android:text="종료"
        android:layout_width="84dp"
        android:layout_height="41dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/imgAndroid"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnHome"
        android:text="홈으로"
        android:layout_width="84dp"
        android:layout_height="41dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/btnExit"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgAndroid"
        android:layout_width="270dp"
        android:layout_height="204dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/rdoAndroidGroup"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>